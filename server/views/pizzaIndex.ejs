<body>
    <div class="topnav" id=myNavbar>
        <!--Meter esto en un html aparte*-->
        <li>
            <a href='/'>Home</a>
        </li>
        <li>
            <a href='/pizza'>Pizza</a>
        </li>

    </div>

    <form class="container">
        <h1>Pizzas</h1>
        <div class="form-group">
            <label class="col-md-8 control-label" for="btn1"></label>
            <div class="col-md-8">
                <div>
                        <input type="text" name="search" placeholder="Search..">
                        <input type="submit" value="Buscar" formaction="/Buscar" formmethod="post">
                </div>
               
                <br>
                <br>
                <button id="btn2" name="btn2" class="btn btn-info" formaction="/createPizza" formmethod="get">Crear pizza</button>
            </div>
            <div>
                <table class="table" style="width:100%">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripci√≥n</th>
                        <th>Ingredientes</th>
                        <th>Masa</th>
                        <th>Trozos</th>
                        <th>Con extra queso</th>
                        
                    </tr>
                    <%for (var i = 0; i < data.length; i++){%>
                        <tr>
                            <td><%= data[i].Nombre %></td>
                            <td><%= data[i].Descripcion %></td>
                            <td><%= data[i].Ingredientes %></td>
                            <td><%= data[i].Masa %></td>
                            <td><%= data[i].Trozos %></td>
                            <td><%= data[i].ExtraQueso %></td>
                            <td><a href="/Buscar/<%=data[i].Nombre%>">Ver</a></td>
                            <td><a href="pizza/<%=data[i].Nombre%>">Editar</a></td>
                            <td><a href="deletePizza/<%=data[i].Nombre%>?_method=DELETE">Eliminar</a></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </form>

</body>

</html>